<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Message Board</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<script>
    function setId(){
        console.log(document.querySelector("#id_input"));
        const id = document.querySelector("#id_input").value;
        localStorage.setItem("id", id);
        location.href = "/"
    }
</script>
<body class="container">
    <header>
        <h1 class="display-4">Message Board</h1>
    </header>
    <main>
        <p>Please input your login name.</p>
        <div class="form-group">
            <label for="id_input">Login name: </label>
            <input type="text" id="id_input" class="form-control">
        </div>
        <button onclick="setId()" class="btn btn-primary">send</button>
    </main>
</body>
</html>